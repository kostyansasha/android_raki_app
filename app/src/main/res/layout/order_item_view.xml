<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_horizontal_margin_shift_between_2cards"
    android:paddingLeft="0dp"
    android:paddingBottom="@dimen/activity_horizontal_margin_shift_between_2cards">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorItemBuyCard"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/order_card_item">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/picture_of_lobster"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/order_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextOnCard">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/order_card_coast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/colorPrice"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>